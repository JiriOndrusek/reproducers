      <version>2.12.1</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <configuration>
          <mainClass>jondruse.MyIrcClient</mainClass>
          <includePluginDependencies>false</includePluginDependencies>
